<div class='col s12 m6 l4'>
  <div class = "wave-effect waves-dark card small white {{if (eq repo.organization 'ciena-frost') 'lighten-1' ''}} {{if (eq repo.organization 'ciena-blueplanet') 'lighten-2'''}} {{if (eq repo.organization 'BP_FROST') 'lighten-3' ''}} {{if (eq repo.organization 'BP_UI_APPS') 'lighten-4' ''}} z-depth-0">
    <div class="col l3">
      {{#link-to 'repositories.repository' repo.id}}
        <img src={{repoIcon repo.organization}}  height=55px />
      {{/link-to}}
    </div>
    {{#if True}}
        {{#md-modal close='closeModal' class="test-modal"}}
            <div class="modal-content">
                <h4>Ohai there!</h4>
                <p>Star ember-cli-materialize if you love it on
                <a href="https://github.com/truenorth/ember-cli-materialize">github</a>!
                </p>
            </div>
            <div class="modal-footer">
                <a class="modal-action modal-close waves-effect waves-orange btn-flat agree-button" {{action 'agree'}}>
                    Done!
                </a>
                <a class="modal-action modal-close waves-effect waves-red btn-flat cancel-button" {{action 'closeModal'}}>
                    Cancel
                </a>
            </div>
        {{/md-modal}}
    {{/if}}
    <div class="col l9">
      <div class="card-content black-text">
        {{#link-to 'repositories.repository' repo.id}}
          <div class = "linked black-text">
            <span class="card-title-main black-text">{{repo.id}}</span>
            <p>by: {{repo.organization}}</p>
          </div>
        {{/link-to}}

        <a href='{{repo.link}}' target='_blank'>
            <img src={{imagePath repo.link}} height=15px />
        </a>

        <div class="card-action"></div>
      </div>
    </div>
  </div>
</div>
