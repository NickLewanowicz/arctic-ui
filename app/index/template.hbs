<div class="content row">
  <div class='col l3 m3 hide-on-small-and-down side-bar z-depth-2'>
    <form {{action 'add' newRepo on='submit'}}>
    <h5>Filters</h5>
      {{md-input
        value=newRepo
        label='Repository'
        validate=true
        errors=errorList
      }}
  </form>

  </div>
  <div class='col l9 m9 s12'>
    <div class='row'>
      {{#each model as |repo|}}
        <div class='col s12 m6 l4'>
          <div class='card blue-grey darken-1'>
            <div class="card-content white-text">
              <span class="card-title">{{repo.id}}</span>
              <p>{{repo.description}}</p>
            </div>
            <div class="card-action">
              <a href='{{repo.demoURL}}' target='_blank'>Demo</a>
              <a href='/repositories/{{repo.id}}'>More Details</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
