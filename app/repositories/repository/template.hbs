<div class = "content row overflow">
  {{md-tabs content=basicTabsContent selected=basicTabsSelection}}
  {{#if (eq basicTabsSelection "details")}}
    <div class = 'row'> <!--Repository Information-->
        <ul class = "collection with-header">
          <li class="collection-header"><h4><i><a href='{{model.repository.link}}' target='_blank'>{{model.repository.id}}</a></i></h4></li>
          <li class="collection-item">Author: {{model.repository.organization}}</li>
          <li class="collection-item">Latest Version: {{model.repository.version}}</li>
          <li class="collection-item">Description: {{model.repository.description}}</li>
        </ul>
    </div>
  {{else if (eq basicTabsSelection "dependencies")}}
  {{md-input value=dependenciesFilter icon="search tiny right" label='Search dependencies by name'}}
    <div class='row overflow'> <!--Dev and Dependencies-->
      <div class='content col l12 m6 s8'>
        <div class='row'> <!--Dependencies-->
          <h5>Dependencies<br /></h5><div class=divider></div>
              {{#each dependenciesFilteredModel as |dep|}}
                {{dependency-card dep=dep cardTags='waves-effect waves-dark card small white z-depth-0'}}
              {{/each}}
        </div>
        <div class ='row'> <!--DevDependencies-->
            <h5>Developer Dependencies</h5><div class=divider></div>
              {{#each devDependenciesFilteredModel as |dep|}}
                {{dependency-card dep=dep cardTags='waves-effect waves-dark card small white z-depth-0'}}
              {{/each}}
        </div>
      </div>
    </div>
  {{else if (eq basicTabsSelection "usedby")}}
    {{#if model.isdependency.isdependencies}}
        {{md-input value=depFilter icon="search tiny right" label='Search repositories by name or organization'}}
        {{#each isDepFilteredModel as |dep|}}
        <div class='col s12 m6 l4'>
          <div class = "wave-effect waves-dark card small tall white z-depth-0">
            <div class="col l3">
              {{#link-to 'repositories.repository' dep.id}}
                <img src={{repoIcon dep.organization}}  height=55px />
              {{/link-to}}
            </div>
            <div class="col l9">
              <div class="card-content black-text ">
                {{#link-to 'repositories.repository' dep.id}}
                  <div class = "linked black-text">
                    <span class="card-title-main black-text">{{dep.id}}</span><br />
                    {{#each dep.versions.lastObject.dependencies as |rep|}}
                      {{#if (eq rep.name model.repository.id)}}<span class="truncate">Version used: {{rep.version}} </span> Type: Dependency{{/if}}
                    {{/each}}
                    {{#each dep.versions.lastObject.devdependencies as |rep|}}
                      {{#if (eq rep.name model.repository.id)}}<span class="truncate"> Version used: {{rep.version}} </span> Type:  DevDependency{{/if}}
                    {{/each}}
                      <br /><span class="truncate">by: {{dep.organization}}</span>
                  </div>
                {{/link-to}}

                <a href='{{dep.link}}' target='_blank'>
                    <img src={{imagePath dep.link}} height=15px />-SOURCE
                </a>

                <div class="card-action"></div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
    {{/if}}
  {{/if}}
</div>
